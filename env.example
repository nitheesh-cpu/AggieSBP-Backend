# AggieRMP Configuration
# Copy this file to .env and update the values

# Application
DEBUG=false
APP_NAME=AggieRMP
VERSION=1.0.0

# Database Configuration (for VM)
DB_HOST=192.168.1.100  # Replace with your VM IP
DB_PORT=5432
DB_NAME=aggiermp
DB_USER=postgres
DB_PASSWORD=your_password_here

# MCP Server Configuration
POSTGRES_VM_HOST=192.168.1.100  # Your VM IP address
POSTGRES_VM_PORT=5432
POSTGRES_DB_NAME=aggiermp
POSTGRES_DB_USER=mcp_readonly   # Recommended: use read-only user
POSTGRES_DB_PASSWORD=secure_password

# Alternative: Full database URL (overrides above settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Scraping Configuration
SCRAPING_DELAY=1.0
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Optional: Set custom paths
# PROJECT_ROOT=/path/to/project
# DATA_DIR=/path/to/data
# CONFIG_DIR=/path/to/config 